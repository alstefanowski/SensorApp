<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:gravity = "bottom|center"
        android:orientation="vertical">
    <Button
        android:id = "@+id/button_localization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/download_localization">
    </Button>

    <Button
        android:id = "@+id/button_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="bottom"
        android:text = "@string/download_address">
    </Button>

    <TextView
        android:id = "@+id/textview_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </TextView>
    <TextView
        android:id = "@+id/textview_localization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/click_locbutton">
    </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>